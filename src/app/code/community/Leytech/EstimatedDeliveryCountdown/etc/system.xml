<config>
    <sections>
        <meanbee_estimateddelivery>
            <groups>
                <leytech_countdown translate="label">
                    <label>Countdown</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>300</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <enabled translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <delivery_method translate="label">
                            <label>Delivery method</label>
                            <comment>Select the delivery method to use for the countdown</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>leytech_estimated_delivery_countdown/system_config_source_shippingmethods</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <enabled>1</enabled>
                            </depends>
                        </delivery_method>
                        <show_seconds translate="label">
                            <label>Show seconds</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <enabled>1</enabled>
                            </depends>
                        </show_seconds>
                    </fields>
                </leytech_countdown>
            </groups>
        </meanbee_estimateddelivery>
    </sections>
</config>
